<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="JavaHelps" transaction-type="RESOURCE_LOCAL">
        <!-- Persistence provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classes -->
        <class>main.logic.User.User</class>

        <properties>
            <!-- The JDBC URL to the database instance -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://192.168.1.10:3306/grant1?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>

            <!-- The database username -->
            <property name="jakarta.persistence.jdbc.user" value="user"/>

            <!-- The database password -->
            <property name="jakarta.persistence.jdbc.password" value="user"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>